@using CBE.Feature.Navigation
@using CBE.Foundation.SiteExtensions.Extensions
@model CBE.Feature.Navigation.Models.NavigationItems
<div class="container">
  <ol class="breadcrumb">
    @foreach (var item in Model.NavItems)
    {
      <li class="@(item.IsActive ? "active" : string.Empty)">
        <a href="@item.Item.Url()">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, item.Item)</a>
      </li>
    }
  </ol>
</div>